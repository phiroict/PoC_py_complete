pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[credentialsId: 'ssh', url: 'git@github.com:phiroict/PoC_py_frontend.git']]])
                script {
                    docker.withRegistry("https://hub.docker.com", 'dockerhub-creds')
                    def customImage = docker.build("phiroict/k8s-test-frontend:${env.BUILD_ID}")
                    customImage.push()
                }
            }
        }
        stage('Test') {
            steps {
                echo "Testing"
            }
        }
        stage('Deploy') {
            steps {
                echo "Pushing sha to repo"
            }
        }
    }
}